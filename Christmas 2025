<script>
/* ===== WELCOME STAR ANIMATION ===== */
const starBox=document.getElementById('stars');
const positions=[
    {top:0,left:100},
    {top:100,left:200},
    {top:200,left:100},
    {top:100,left:0},
    {top:100,left:100}
];

positions.forEach((pos,i)=>{
    setTimeout(()=>{
        const s=document.createElement('div');
        s.className='star';
        s.textContent='‚≠ê';
        s.style.top=pos.top+'px';
        s.style.left=pos.left+'px';
        s.style.opacity=1;
        starBox.appendChild(s);

        if(i===4){
            setTimeout(()=>{
                document.querySelectorAll('.star').forEach(st=>st.classList.add('spin'));
                document.getElementById('welcomeText').style.opacity=1;
            },600);
        }
    },i*600);
});

/* ===== SCROLL REVEAL ===== */
const observer=new IntersectionObserver(entries=>{
    entries.forEach(e=>{
        if(e.isIntersecting){
            e.target.classList.add('active');
        }
    });
},{threshold:0.15});

document.querySelectorAll('.reveal').forEach(el=>observer.observe(el));
</script>

